@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model EnduroBud.Models.Activity

@{ ViewBag.Title = Model.Description; }

<h2>Edit @ViewBag.Title</h2>

<form asp-controller="Activity" asp-action="Edit" method="post" class="form-horizontal" role="form" asp-anti-forgery>
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="@Model.Type" class="form-control">
                    <option value="Running (Road)">Running (Road)</option>
                    <option value="Running (Trail)">Running (Trail)</option>
                    <option value="Cycling">Cycling</option>
                    <option value="Mountain Biking">Mountain Biking</option>
                    <option value="Swimming">Swimming</option>
                </select>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>



            </div>
        </div>



        <div class="form-group">
            <label asp-for="@Model.Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Date" class="form-control" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Distance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Distance" class="form-control" />
                <span asp-validation-for="@Model.Distance" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>